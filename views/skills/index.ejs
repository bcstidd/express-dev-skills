
<%- include('../partials/header') %>
  <h1>Skills</h1>
    <ul>
      <% skills.forEach(function(t) { %>
        <li>
          <form action="/skills/<%= t.id %>?_method=DELETE"
            class="delete-form" method="POST">
            <button type="submit">X</button>
          </form>
          <a href="/skills/<%= t.id%>">
          <%= t.skill %>
          </a>  
          - 
          <%= t.mastered ? 'mastered' : 'not mastered' %>
        </li>
      <% }); %>
    </ul>
    <a href="/skills/new">Add Skill</a>
<%- include('../partials/footer') %>